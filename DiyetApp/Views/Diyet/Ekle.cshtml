
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>Yeni Diyet Ekle</title>
</head>
<body>
    <div class="panel panel-default">

        <div class="panel panel-heading">
            <h3>Yeni Diyet Ekle</h3>
        </div>
        <div class="panel panel-body">
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label>Öğün</label>
                    @Html.TextBox("Ogun", null, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Öğün Açıklama</label>
                    @Html.TextArea("Aciklama", null, new { @class = "form-control" })
                </div>
                <input type="submit" value="Kaydet" class="btn btn-primary" />
                @Html.ActionLink("Diyet Listesi", "Index", null, new { @class = "btn btn-default" })
            }
        </div>
    </div>
</body>
</html>
